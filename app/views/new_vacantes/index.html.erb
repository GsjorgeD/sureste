<header class="bg-white sm:w-auto h-20 md:h-32 lg:h-16 shadow ">
  <div class="inline-block">
    <img class="w-32 h-16  mt-3 md:w-auto md:h-28 lg:w-32 lg:h-14 lg:mt-2" src="https://pbs.twimg.com/media/E14yQSfVoAYvuO7?format=png&name=small" alt="">
  </div>

  <div class="inline-block space-y-2 float-right">
    <button class="mt-5" >
    <a class="italic text-base md:text-4xl lg:text-base mt-5 md:mt-9 lg:mt-3 mr-2 bg-white hover:bg-red-700 text-white font-bold py-2 px-4 rounded " href="/index">Salir</a>
  </button>
  </div>
</header>
<h1 class="mt-12 mb-1 mr-16 ml-16 text-2xl font-bold leading-tight text-gray-900">Vacantes Vigentes</h1>
<body class="bg-gray-100">
<div class="mb-16 mr-16 ml-16 bg-white shadow overflow-hidden sm:rounded-md">
<table class="mt-4">
  <thead >
    <tr >
      <th >Posicion</th>
      <th >Descripcion</th>
      <th>Ubicacion</th>
      <th>Salario</th>
      <th>Tipo</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody cñclass="class="shadow"">
    <% @new_vacantes.each do |new_vacante| %>
      <tr class="mt-6">
        <td class="border border-gray-200 box-border h-16 w-32 p-4 border-4" ><%= new_vacante.posicion %></td>
        <td class="border border-gray-200 "><%= new_vacante.descripcion %></td>
        <td class="border border-gray-200 "><%= new_vacante.ubicacion %></td>
        <td class="border border-gray-200 "><%= new_vacante.salario %></td>
        <td class="border border-gray-200 "><%= new_vacante.tipo %></td>
        <td class="border border-gray-200 "><%= new_vacante.categoria %></td>
        <td class=""> <div class="hover:bg-blue-400 text-white font-bold py-2 px-4 rounded" > <%= link_to 'Ver', new_vacante %></div></td>
        <td> <div class="hover:bg-green-500 text-white font-bold py-2 px-4 rounded" ><%= link_to 'Editar', edit_new_vacante_path(new_vacante) %></div></td>
        <td> <div class="hover:bg-red-600 text-white font-bold py-2 px-4 rounded" ><%= link_to 'Eliminar', new_vacante, method: :delete, data: { confirm: '¿Estas seguro?' } %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="h-8 w-32 mb-4 ml-4 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" >
<%= link_to 'Nueva vacante', new_new_vacante_path %></div>
</div>
</body>
