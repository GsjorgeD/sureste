<header class="bg-white sm:w-auto h-20 md:h-32 lg:h-16 shadow ">
  <div class="inline-block">
    <img class="w-32 h-16  mt-3 md:w-auto md:h-28 lg:w-32 lg:h-14 lg:mt-2" src="https://pbs.twimg.com/media/E14yQSfVoAYvuO7?format=png&name=small" alt="">
  </div>

  <div class="inline-block space-y-2 float-right">
    <button class="mt-5" >
    <a class="italic text-base md:text-4xl lg:text-base mt-5 md:mt-9 lg:mt-3 mr-2 bg-white hover:bg-red-700 text-white font-bold py-2 px-4 rounded " href="/static_pages/index">Salir</a>
  </button>
  </div>
</header>
<body class="bg-gray-100">
  <div class="mt-16 mr-16 ml-16">
   <p id="notice"><%= notice %></p>
    <%= description_card @new_vacante.posicion, @new_vacante.descripcion do %>

      <%= description_card_row 'Ubicacion', @new_vacante.ubicacion, top_border: false %>
      <%= description_card_row 'Salario', @new_vacante.salario %>
      <%= description_card_row 'Tipo', @new_vacante.tipo %>
      <%= description_card_row 'Categoria', @new_vacante.categoria %>
    <% end %>
    <%= link_to 'Editar', edit_new_vacante_path(@new_vacante), class: " text-lg"  %> |
    <%= link_to 'Regresar', new_vacantes_path, class: " text-lg" %>
  </div>

</body>
