<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Posicion</th>
      <th>Descripcion</th>
      <th>Ubicacion</th>
      <th>Salario</th>
      <th>Tipo</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.posicion %></td>
        <td><%= job.descripcion %></td>
        <td><%= job.ubicacion %></td>
        <td><%= job.salario %></td>
        <td><%= job.tipo %></td>
        <td><%= job.categoria %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
